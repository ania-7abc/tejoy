    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debugging tejoy",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/debug/tejoy",
            "args": [],
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable automatic formatting for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set disassembly flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "make-debug"
        }
    ]
}